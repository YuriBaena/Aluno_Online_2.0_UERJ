FROM eclipse-temurin:21-jdk

# 1. Instalar dependências do sistema e Chrome (mantido o ajuste anterior)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    wget \
    gnupg \
    curl \
    unzip \
    libglib2.0-0 \
    libnss3 \
    libfontconfig1 \
    libxrender1 \
    libxtst6 \
    libxi6 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    libasound2t64 \
    --no-install-recommends

# 2. Instalar o Google Chrome Stable
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/googlechrome-linux-keyring.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/googlechrome-linux-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y google-chrome-stable --no-install-recommends

WORKDIR /app

# 3. NOVO: Instalar dependências do Python a partir do seu requirements.txt
# Copiamos apenas o arquivo primeiro para aproveitar o cache do Docker
COPY src/main/resources/scripts/requirements.txt ./requirements.txt
RUN pip3 install --no-cache-dir --break-system-packages -r requirements.txt

# 4. Fluxo original do Maven
COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn
RUN chmod +x mvnw
RUN ./mvnw dependency:go-offline || true

# 5. Copia o restante do projeto
COPY . .

# Garante permissão para o script Python
RUN chmod +x src/main/resources/scripts/main.py

EXPOSE 8080
CMD ["./mvnw", "spring-boot:run"]